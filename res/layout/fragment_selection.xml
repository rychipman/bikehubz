<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:custom="http://schemas.android.com/apk/res/com.bikehubz.android"
    	xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_tan" >
    <ImageView
            android:id="@+id/selection_profile_pic"
            android:layout_height="150dp"
            android:layout_width="150dp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="70dp" />
    <com.bikehubz.android.widgets.FontTextView
            android:id="@+id/selection_user_name"
            custom:customFont="Amatic-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/selection_profile_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#222"
            android:textSize="62sp" />
     <com.bikehubz.android.widgets.FontTextView 
	        android:id="@+id/invite_friends_message"
	        custom:customFont="AmaticSC-Regular.ttf"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
         	android:layout_centerHorizontal="true"
	        android:layout_below="@id/selection_user_name"
	        android:gravity="center"
	        android:textColor="#222"
	        android:textSize="24dp"
	        android:layout_marginTop="40dp"
	        android:text="@string/invite_friends_message"/>
     <LinearLayout
         	android:layout_width="match_parent"
         	android:layout_height="wrap_content"
         	android:layout_below="@+id/invite_friends_message" >
		    <com.bikehubz.android.widgets.FontTextView 
		        	style="@style/oneWide"
			        android:id="@+id/invite_friends_button"
			        android:layout_weight=".5"
			        android:gravity="center"
			        custom:customFont="AmaticSC-Regular.ttf"
			        android:layout_centerHorizontal="true"
			        android:clickable="true"
			        android:textColor="#222"
			        android:textSize="30dp"
			        android:layout_marginTop="40dp"
			        android:text="@string/invite_friends_prompt"/>
		    <com.bikehubz.android.widgets.FontTextView 
		        	style="@style/oneWide"
			        android:id="@+id/skip_invite_friends_button"
			        android:layout_weight=".5"
			        android:gravity="center"
			        custom:customFont="AmaticSC-Regular.ttf"
			        android:layout_below="@+id/invite_friends_message"
			        android:layout_centerHorizontal="true"
			        android:clickable="true"
			        android:textColor="#222"
			        android:textSize="30dp"
			        android:layout_marginTop="40dp"
			        android:text="@string/skip_invite_friends"/>
		</LinearLayout>
</RelativeLayout>
